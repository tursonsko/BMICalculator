<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recipes for dishes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="16dp"/>

    <LinearLayout
        android:id="@+id/recipe1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/recipe1TitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spaghetti with meatballs"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/recipe1DescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A classic Italian-American dish consisting of spaghetti pasta topped with tomato sauce and meatballs."/>

        <Button
            android:id="@+id/recipe1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Recipe"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recipe2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe1Layout"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/recipe2TitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chicken Alfredo"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/recipe2DescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A creamy pasta dish with chicken, Parmesan cheese, and garlic."/>

        <Button
            android:id="@+id/recipe2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Recipe"/>

    </LinearLayout>

</RelativeLayout>
